<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.jason.badddos.Home_Controller">
    <top>
        <VBox alignment="CENTER">
            <Label id="title">Welcome to Bad DDOS</Label>
            <Label fx:id="feedback" opacity="0" />
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Label text=" " />
            <Label styleClass="info">Enter IP Address</Label>
            <TextField alignment="CENTER" styleClass="input" fx:id="ipInp" promptText="100.100.100.100" />
            <Label text=" " />
            <Label styleClass="info">Enter Port</Label>
            <TextField alignment="CENTER" styleClass="input" fx:id="portInp" promptText="80" />
            <Label text=" " />
            <Label styleClass="info">Amount of Threads</Label>
            <TextField alignment="CENTER" fx:id="threadInp" promptText="10000" />
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER">
            <Button id="ddosBtn" onAction="#ddos_btn_click">DDOS</Button>
            <padding>
                <Insets bottom="20.0" top="40.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>